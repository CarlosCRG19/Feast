<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnCompare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compare" />

    <Button
        android:id="@+id/btnFilters"
        android:layout_toEndOf="@+id/btnCompare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filters" />

    <TextView
        android:id="@+id/tvFoundBusinesses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCompare"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:textSize="30sp"
        tools:text="Businesses found: 50" />

    <TextView
        android:id="@+id/tvFiltersUsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFoundBusinesses"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:textSize="30sp"
        android:text="Filters used:" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFilters"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tvFiltersUsed"
        android:padding="10dp" />


</RelativeLayout>